# Tower variables
##########################################################
tower:
  use_token: False
  description_on: False
  password: PASSWORD
  verify_ssl: true
  format: human
  insecure: true
  oauth_token: 
  verbose: False
  color: True
  username: USERNAME
  host: tower.hostname.com
  certificate: 

host_credentials: 'path to ssh_public_key_file'

##########################################################
# Satellite Variables
##########################################################

satellite:
  server: 'https://satellite.example.com'
  username: 'username'
  password: 'password'

##########################################################
# Tower variables
##########################################################

# snow_record variables
# These come from setting up a dev instance with Service Now Online
snow:
  username: 'admin'
  password: 'PASSWORD'
  instance: 'dev#####'
  severity: 2
  priority: 2

##########################################################
# Splunk Variables
##########################################################

splunk:
  enabled: true
  host: splunk.example.com
  hec:
    enabled: true
    ssl: false
    token: aaa-bbb-ccc-ddd-eee-fff
    port: 8088
